{
    "name": "modena",
    "version": "2.5.0",
    "description": "Express wrapper to expose isolated multiple apps on the same server",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/L3bowski/modena-v2.git"
    },
    "keywords": [
        "modena",
        "multi-tenancy",
        "express",
        "multiple",
        "apps",
        "web",
        "server"
    ],
    "author": "Carles Capellas <capellas.carles@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/L3bowski/modena-v2/issues"
    },
    "homepage": "https://github.com/L3bowski/modena-v2#readme",
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/cucumber": "^4.0.5",
        "@types/express": "^4.16.1",
        "chai": "^4.2.0",
        "cucumber": "^5.1.0",
        "husky": "^2.3.0",
        "prettier": "^1.17.1",
        "ts-node": "^8.2.0",
        "tslint": "^5.16.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.4.5"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc",
        "build:clean": "rm -rf dist && npm run build",
        "lint": "tslint -e 'node_modules/**' -p .",
        "prepublishOnly": "npm run build:clean",
        "prettier:check": "prettier --list-different \"src/**/*.ts\"",
        "prettier:write": "prettier --write \"src/**/*.ts\"",
        "test": "cucumber-js --require-module ts-node/register --require src/**/__step-definitions__/*.ts features/**/*.feature"
    },
    "dependencies": {
        "https": "^1.0.0"
    }
}
